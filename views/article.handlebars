<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h3>{{headline}}</h3>
      <a target="_blank" href={{link}}>View on TechCrunch</a>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <h4>Comments</h4>
        {{#if comments}}
          {{#each comments}}
            <div class="thumbnail">
              <p>{{body}}</p>
              <p>{{author}} | {{datetime}}</p>
            </div>
          {{/each}}
        {{else}}
        <p>No comments yet.</p>
        {{/if}}
    </div>
  </div>
</div>
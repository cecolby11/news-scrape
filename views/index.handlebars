<div class="container">
  {{#if newArticles}}
  <div class="row">
    <div class="col-md-12">
      <h2>Newest Stories</h2>
      <form method="GET" action="/scrape">
        <button class="btn btn-info"><span class="glyphicon glyphicon-refresh" aria-hidden="true"></span>  Scrape for Fresh Stories</button>
      </form>
      <ul>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      {{#each newArticles}}
      {{!-- in case any articles on tech crunch were videos etc. and are missing the proper info! --}}
      {{#if headline}}
      <div class="thumbnail">
        <h4>{{headline}} | <span class="author">{{author}}</span></h4>
          <form method="POST" action="/articles/{{_id}}?_method=PUT">
              <button class="btn btn-primary pull-right" role="button" type="submit"><span class="glyphicon glyphicon-ok" aria-hidden="true"></span> Save Article</button>
              <a class="btn btn-success pull-left" role="button" target="_blank" href={{link}}><span class="glyphicon glyphicon-new-window" aria-hidden="true"></span> View on TechCrunch</a>
          </form>
      </div>
      {{/if}} 
      {{/each}}
    </div>
  </div>
  {{else}}
  <div class="row">
    <div class="col-md-12">
      <p>Oh no! No new articles here.</p>
      <button class="btn btn-info">Scrape for Fresh Stories</button>
    </div>
  </div>
  {{/if}}
</div>